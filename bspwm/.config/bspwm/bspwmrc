#! /bin/sh

sxhkd &
compton &
nm-applet &
blueman-applet &
flameshot &

# fix java app issues with tiling wm
wmname LG3D

bspc config border_width         1
bspc config window_gap           0

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# Laptop

feh --bg-scale $HOME/Images/wallpaper.jpg
bspc monitor -d I II III IV V VI VII VIII IX X

# Desktop

# xrandr --output DP-1-2 --auto --primary
# xrandr --output DP-1 --auto --right-of DP-1-2

# feh --bg-scale $HOME/Images/wallpaper2.jpg $HOME/Images/wallpaper.jpg
# bspc monitor DP-1-2 -d I II III IV V VI VII
# bspc monitor DP-1 -d VIII IX X

$HOME/.scripts/launch_polybar.sh
