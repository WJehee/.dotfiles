#! /bin/sh

# start programs
sxhkd &
compton &
nm-applet &
blueman-applet &
flameshot &
/usr/bin/dunst &
keybase service &

# load colors 
wal --theme $HOME/.config/colors.json

# fix java app issues with tiling wm
wmname LG3D

bspc config border_width         1
bspc config window_gap           0

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# Desktop

if [ $(hostname) = rustyDesktop ]
then
    #xrandr --output DP-2 --auto --primary
    #xrandr --output DP-1-1 --auto --right-of DP-2
    #xrandr --output HDMI-4 --auto --right-of DP-1-1 

    xrandr --output DisplayPort-1-1 --auto --primary
    xrandr --output DP-1 --auto --right-of DisplayPort-1-1
    xrandr --output HDMI-A-1-3 --auto --right-of DP-1

    nitrogen --restore

    #bspc monitor DP-2 -d I II III IV V VI VII
    #bspc monitor DP-1-1 -d VIII IX
    #bspc monitor HDMI-4 -d X

    bspc monitor DisplayPort-1-1 -d I II III IV V VI 
    bspc monitor DP-1 -d VII VIII IX
    bspc monitor HDMI-A-1-3 -d X

elif [ $(hostname) = rustyLaptop ]
then
    feh --bg-scale $HOME/Images/wallpaper.jpg
    bspc monitor -d I II III IV V VI VII VIII IX X
fi

$HOME/.scripts/launch_polybar.sh
