# BSPWM workspace and windows

# move between windows
super + {h, j, k, l}
    bspc node -f {west, south, north, east}

# move focused window
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# move focus to workspace
super + {1-9,0}
    bspc desktop -f ^{1-9,10}

# move window to workspace
super + shift + {1-9,0}
    bspc node focused -d ^{1-9,10} 

# close focused window
super + q
    bspc node focused -c

# kill focused window
super + shift + q
    bspc node focused -k

# expand focused window
super + r : {h, j, k, l}
    bspc node focused -z {left -50 0, bottom 0 50, top 0 -50, right 50 0}

# shrink focused window
super + shift + r : {h, j, k, l}
    bspc node focused -z {left 50 0, bottom 0 -50, top 0 50, right -50 0}

shift + alt + ctrl + l
    $HOME/.scripts/change_layout

# Start applications

super + Return 
    alacritty

super + shift + Return
    dmenu_run -fn 'Hack-17' -m 0 -i 

super + f
    firefox-developer-edition

# Scripts

super + shift + p
    $HOME/.scripts/password_dmenu

# Audio controls

# Placeholder for volume down
    amixer set 'Master' 5%-

# Placeholder for volume up
    amixer set 'Master' 5%+

# Placeholder for mute
    amixer -D pulse set 'Master' 1+ toggle 

