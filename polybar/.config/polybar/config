module-margin-left = 1
module-margin-right = 2

font-0 = "Hack:size=10;1" 
font-1 = "FontAwesome:size=12;1"

modules-left = bspwm 
modules-center = launch-terminal    
modules-right = pulseaudio memory cpu storage battery date 

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label =  %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label =  %percentage_used%%

[module/storage]
type = custom/script
interval = 120
exec = df | grep "/dev/nvme0n1p3" | awk '{print $5}'
label =  %output%

[module/launch-terminal]
type = custom/text
content = ""
click-left = alacritty 

[module/date]
type = internal/date
interval = 5

date = 
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M
label = %date% %time%

[module/pulseaudio]
