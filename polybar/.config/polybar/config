[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8} 
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color5}
success = ${xrdb:color2}
alert = ${xrdb:color1}
muted = ${xrdb:color7}
accent = ${xrdb:color6}

[global/wm]
margin-top = 0

[bar/main-bar]
width = 100%
height = 2% 
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00
border-size = 0
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

separator = |
font-0 = "Hack:size=10;1" 
font-1 = "FontAwesome:size=12;1"

modules-left = bspwm 

[bar/desktop]
inherit = bar/main-bar
monitor = DP-2
tray-position = center
modules-right = wired time date

[bar/desktop-2]
inherit = bar/main-bar
monitor = DP-3 
height = 1.25% 

[module/time]
type = internal/date
interval = 5
time = %H:%M
label = %time%
format-foreground = ${colors.accent}

[module/date]
type = internal/date
interval = 60
date = "%b %d (%a) - %Y"
label = %date%
format-foreground = ${colors.muted}

[module/crypto]
type = custom/script
interval = 300
label = %output%â‚¬

[module/btc]
inherit = module/crypto
exec = "~/.scripts/prices BTC"

[module/eth]
inherit = module/crypto
exec = "~/.scripts/prices ETH"

[module/xmr]
inherit = module/crypto
exec = "~/.scripts/prices XMR"

[module/xlm]
inherit = module/crypto
exec = "~/.scripts/prices XLM"

[module/wireless]
type = internal/network
interface = wlan1

[module/wired]
type = internal/network
interface = enp0s31f6 
ping-interval = 5

label-connected = %local_ip%
format-connected-foreground = ${colors.success}
format-packetloss-foreground = ${colors.alert}
format-disconnected-foreground = ${colors.alert}

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-scroll = false

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

