[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8} 
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color5}
success = ${xrdb:color2}
alert = ${xrdb:color1}
muted = ${xrdb:color7}
accent = ${xrdb:color6}

[global/wm]
margin-top = 0

[bar/basic-bar]
width = 100%
height = 28
radius = 0
fixed-center = true 

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00
border-size = 0
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = "Hack:size=10;0"
font-1 = "Hack:size=20;10"
font-2 = "Symbols Nerd Font:size=36;8"

modules-left = bspwm right-arrow

[bar/main-bar]
inherit = bar/basic-bar

tray-position = right
tray-background = ${colors.background-alt}
tray-padding = 4
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1

modules-right = left-arrow2 wired left-arrow1 date left-arrow2 time

[bar/laptop]
inherit = bar/main-bar

[bar/desktop]
inherit = bar/main-bar
monitor = DP-2

[bar/desktop-2]
inherit = bar/basic-bar
monitor = DP-3 

[module/right-arrow]
type = custom/text
content = ""
content-font = 3
content-foreground = ${colors.background-alt}
content-background = ${colors.background}

[module/left-arrow1]
type = custom/text
content-font = 3
content = ""
content-foreground = ${colors.background}
content-background = ${colors.background-alt}

[module/left-arrow2]
type = custom/text
content-font = 3
content = ""
content-foreground = ${colors.background-alt}
content-background = ${colors.background}

[module/time]
type = internal/date
interval = 5
time = %H:%M
label = %time%
format = "<label> "
format-background = ${colors.background-alt}
format-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 60
date = "%b %d (%a) - %Y"
label = %date%
format-background = ${colors.background}
format-foreground = ${colors.muted}

[module/crypto]
type = custom/script
interval = 300
label = %output%€

[module/btc]
inherit = module/crypto
exec = "~/.scripts/prices BTC"

[module/eth]
inherit = module/crypto
exec = "~/.scripts/prices ETH"

[module/xmr]
inherit = module/crypto
exec = "~/.scripts/prices XMR"

[module/xlm]
inherit = module/crypto
exec = "~/.scripts/prices XLM"

[module/wireless]
type = internal/network
interface = wlan1

[module/wired]
type = internal/network
interface = enp0s31f6 
ping-interval = 5

label-connected = %local_ip%
format-connected-background = ${colors.background-alt}
format-connected-foreground = ${colors.success}
format-packetloss-background = ${colors.background-alt}
format-packetloss-foreground = ${colors.background-alt}
format-disconnected-background = ${colors.background-alt}
format-disconnected-foreground = ${colors.alert}

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-scroll = false

format-background = ${colors.background-alt}

label-focused = %index%
label-focused-foreground= ${colors.success}
label-focused-underline = ${colors.success}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-foreground = ${colors.alert}
label-urgent-underline = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

